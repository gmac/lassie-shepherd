package com.lassie.shepherd.localizer{	import flash.events.Event;	import com.lassie.shepherd.data.game.*;	import com.lassie.shepherd.data.*;	internal class GameLocalizer extends BaseLocalizer	{		public function GameLocalizer():void {			super();		}		/**		* Loads a list of rooms into the application.		*/		public function getGameData() {			var $io:FileIO = new FileIO();			$io.addEventListener(Event.COMPLETE, this._onGameDataLoad);			$io.load(FileService.FILE_SERVICE + GameData.instance.id + "." + FileService.EXT_GAME);		}			/**			* Exports the new room listed in the room queue.			*/			private function _onGameDataLoad($event:Event):void {				var $io:FileIO = FileIO($event.target);				$io.removeEventListener(Event.COMPLETE, this._onGameDataLoad);				GameDataParser.parse( GameData.instance, JSON.parse($io.data) );				_filename = GameData.instance.id;				dispatchEvent(new Event(LocalizerSetup.SETUP_LOAD_COMPLETE));			}	}}