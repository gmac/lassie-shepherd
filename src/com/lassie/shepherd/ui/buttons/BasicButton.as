package com.lassie.shepherd.ui.buttons{	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class BasicButton extends MovieClip	{		public function BasicButton():void		{			super();			stop();						buttonMode = true;			useHandCursor = true;			tabEnabled = false;			mouseChildren = false;						addEventListener(MouseEvent.MOUSE_OVER, this._onMouseOver, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, this._onMouseOut, false, 0, true);		}			// --------------------------------------------------	//  Mouse responders	// --------------------------------------------------				private function _onMouseOver($event:MouseEvent):void {			gotoAndStop(2);		}				private function _onMouseOut($event:MouseEvent):void {			gotoAndStop(1);		}	}}