package com.lassie.shepherd.ui.buttons{	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.geom.Rectangle;	import com.lassie.shepherd.ui.buttons.ActionButton;		public class LabeledActionButton extends ActionButton	{		public var textLabel:TextField;		private var _textColor:uint = 0xFFFFFF;				public function LabeledActionButton():void		{			super();			textLabel.mouseEnabled = false;			textLabel.autoSize = TextFieldAutoSize.LEFT;		}				public function get label():String		{			return textLabel.text;		}				public function set label(lbl:String):void		{			textLabel.text = lbl;			drawHit();		}				public function get textColor():uint		{			return _textColor;		}				public function set textColor(col:uint):void		{			_textColor = col;						var tf:TextFormat = new TextFormat();			tf.color = col;						textLabel.defaultTextFormat = tf;			textLabel.setTextFormat(tf);		}				private function drawHit():void		{			var rect:Rectangle = getRect(this);			rect.inflate(2, 2);			graphics.beginFill(0x000000, 0);			graphics.drawRect(rect.x, rect.y, rect.width, rect.height);			graphics.endFill();		}	}}