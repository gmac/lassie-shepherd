package com.lassie.shepherd.ui.buttons{	import flash.display.MovieClip;	import com.lassie.shepherd.ui.buttons.ButtonClip;		public class ActionButton extends ButtonClip	{		public var value:String ="";		public var bttnIcon:MovieClip;				public function ActionButton():void		{			super();			bttnIcon.stop();			bttnIcon.mouseEnabled = false;						buttonMode = true;			useHandCursor = true;			tabEnabled = false;			mouseChildren = false;		}				public function get icon():String		{			return bttnIcon.currentLabel;		}				public function set icon(ico:String):void		{			bttnIcon.gotoAndStop(ico);		}				public override function set enabled(enable:Boolean):void		{			mouseEnabled = enable;			useHandCursor = enable;			alpha = enable ? 1 : 0.5;		}	}}