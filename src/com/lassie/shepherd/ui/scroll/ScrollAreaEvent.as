package com.lassie.shepherd.ui.scroll{	import flash.events.Event;		internal class ScrollAreaEvent extends Event	{	// --------------------------------------------------	//  Static members	// --------------------------------------------------				public static const UPDATE_SCROLL:String = "updateScrollArea";			// --------------------------------------------------	//  Public members	// --------------------------------------------------				public var scrollPercentage:Number;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function ScrollAreaEvent(type:String, percent:Number=0, bubble:Boolean=false, cancel:Boolean=false):void		{			super(type, bubble, cancel);			scrollPercentage = percent;		}	}}