package com.lassie.shepherd.ui{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		public class RolloverLabel extends Sprite	{		public var textLabel:TextField;				public function RolloverLabel():void		{			super();						mouseEnabled = false;			mouseChildren = false;						textLabel.autoSize = TextFieldAutoSize.CENTER;		}				public function get label():String		{			return textLabel.text;		}				public function set label(val:String):void		{			textLabel.text = val;		}	}}