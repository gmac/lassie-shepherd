package com.lassie.shepherd.ui{	import flash.display.Sprite;	import flash.display.GradientType;	import flash.geom.Matrix;		// WINDOW HEADER		public class WindowHeaderBar extends Sprite	{		private var _height:int;		private var _cornerRadius:int;		private var _colors:Array;		private var _alphas:Array;		private var _ratios:Array;		private var _border:uint;		private var _matrix:Matrix;				public function WindowHeaderBar(headerHeight:int=25, radius:int=6):void		{			super();						_height = headerHeight;			_cornerRadius = radius;			_colors = new Array(0x476ba7, 0x274a85, 0x192e53, 0x192e53);			_alphas = new Array(1, 1, 1, 1);			_ratios = new Array(0, 140, 141, 255);			_border = 0x1E3171;			_matrix = new Matrix();		}				public function redraw(w:int):void		{			var l:int = 0; // left			var t:int = 0; // top			var h:int = _height; // height			var r:int = _cornerRadius; // corner radius			_matrix.createGradientBox(w, h, 90*Math.PI/180, l, t);					graphics.clear();			graphics.lineStyle(1, _border, 1, true);			graphics.beginGradientFill(GradientType.LINEAR, _colors, _alphas, _ratios, _matrix);			graphics.moveTo(l, t+h);			graphics.lineTo(l, t+r);			graphics.curveTo(l, t, l+r, t);			graphics.lineTo(l+w-r, t);			graphics.curveTo(l+w, t, l+w, t+r);			graphics.lineTo(l+w, t+h);			graphics.lineTo(l, t+h);			graphics.endFill();		}	}}