package com.lassie.shepherd.ui.window{	import flash.display.Sprite;		public class WindowPanel extends Sprite	{		public static const PANEL_COLOR:uint = 0x333333;		public static const BORDER_COLOR:uint = 0x000000;		public static const TOP_EDGE_COLOR:uint = 0x666666;				public function WindowPanel():void		{			super();		}				public function redraw(w:int, h:int):void		{			graphics.clear();			graphics.lineStyle(1, BORDER_COLOR, 1, true);			graphics.beginFill(PANEL_COLOR, 1);			graphics.drawRect(0, 0, w, h);			graphics.endFill();						graphics.lineStyle(1, TOP_EDGE_COLOR, 1);			graphics.moveTo(0, 0);			graphics.lineTo(w, 0);		}	}}