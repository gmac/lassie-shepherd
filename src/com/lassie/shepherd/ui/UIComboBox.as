package com.lassie.shepherd.ui{	import fl.controls.ComboBox;	import flash.text.TextFormat;	import flash.events.Event;		public class UIComboBox extends ComboBox	{		public function UIComboBox():void		{			super();						var txt:TextFormat = new TextFormat();			txt.indent = 3;						setStyle("textPadding", 0);			textField.setStyle("textFormat", txt);			tabEnabled = false;			focusEnabled = false;						addEventListener(Event.REMOVED_FROM_STAGE, this._onClearDisplay);		}				private function _onClearDisplay(evt:Event):void		{			close();		}	}}