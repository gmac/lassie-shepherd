package com.lassie.shepherd.ui.tabs{	import com.lassie.shepherd.ui.tabs.Tab;	import flash.text.TextField;	import flash.text.TextFormat;		public class TextTab extends Tab	{		public var textLabel:TextField;		public function TextTab():void		{			super();		}			// --------------------------------------------------	//  Public interface	// --------------------------------------------------				public function get label():String		{			return textLabel.text;		}				public function set label(val:String):void		{			textLabel.text = val;		}				public override function set selected(val:Boolean):void		{			super.selected = val;						var col:TextFormat = new TextFormat();			col.color = val ? 0xFFFFFF : 0x666666;			textLabel.setTextFormat(col);		}	}}