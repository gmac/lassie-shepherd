package com.lassie.shepherd.data.room{	public class NodeData extends Object	{		public var id:String="n";		public var name:String="";		public var lockName:Boolean=false;		public var trap:Boolean=false;		public var x:int=-1;		public var y:int=-1;		public var neighbors:Array = new Array();		public var commands:String = "";		public var turn:int = 4;		public var scale:Number = 1;		public var speed:Number = 1;		public var blur:Number = 1;		public var color:uint = 0x000000;		public var colorRatio:Number = 1;		public var scaleEnabled:Boolean=false;		public var speedEnabled:Boolean=false;		public var blurEnabled:Boolean=false;		public var colorEnabled:Boolean=false;				public function NodeData(index:int=0):void {			id += index.toString();		}				public function toString():String {			return "(id:"+id+", x:"+x+", y:"+y+")";		}	}}