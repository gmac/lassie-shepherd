package com.lassie.shepherd.data.game{	import com.lassie.shepherd.data.InteractionData;	import com.lassie.shepherd.data.DialogueData;		public final class TopicData	{		public var key:String = "";		public var id:String = "";		public var lockId:Boolean = true;		public var hidden:Boolean = false;		public var menuText:String = "";		public var topicAction:int = 0;		public var tierAction:int = 0;		public var topicTarget:String = "";		public var tierTarget:String = "";		public var action:InteractionData;		public var tier:TierData;				public function TopicData($index:int=0):void		{			setTopicKey($index);			action = new InteractionData();			tier = new TierData();		}				public function setTopicKey($index:int):void {			key = "t"+$index;		}				public function getDialogue():String		{			if (action.dialogue.length > 0)			{				var limit:int = 150;				var dia:DialogueData = DialogueData(action.dialogue[0]);				var txt:String = dia.puppet +": "+ dia.caption;				if (txt.length > limit) txt = txt.substr(0, limit)+"...";				return txt;			}			return "";		}				public function toString():String		{			return "[TopicData] key: "+key;		}	}}