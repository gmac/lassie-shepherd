package com.lassie.shepherd.data{	import com.lassie.shepherd.data.game.GameData;		public final class InteractionFactory	{		public static function createList($addItemRecord:Boolean=false, $addDefaultRecord:Boolean=false):Array		{			// create a base list of interaction titles			var baseList:Array = GameData.actionTitles.split(",");			var actionList:Array = new Array();						// create a new interaction with each title			for (var j:int = 0; j < baseList.length; j++)			{				actionList.push(new InteractionData(baseList[j]));			}						if ($addItemRecord) {				actionList.push(new InteractionData("Item"));			}			else if ($addDefaultRecord) {				actionList.push(new InteractionData("_default"));			}						return actionList;		}	}}