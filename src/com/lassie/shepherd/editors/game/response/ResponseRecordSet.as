package com.lassie.shepherd.editors.game.response{	import com.lassie.shepherd.editors.game.GameRecordSet;	import com.lassie.shepherd.data.game.ResponseRecord;	import com.lassie.shepherd.data.game.GameDataParser;	import com.lassie.shepherd.data.ActionsDataParser;	import com.lassie.utils.ObjectUtil;	import flash.events.Event;		public final class ResponseRecordSet extends GameRecordSet	{		public function ResponseRecordSet():void		{			super();		}				public override function addRecord():void		{			fileNewRecord(new ResponseRecord("response" + numRecords));		}				public override function copyRecord():void		{			ActionsDataParser.voiceIncrement = lsGameData.voiceInc;			ActionsDataParser.reassignVoiceIncrement = true;						var $copy:ResponseRecord = GameDataParser.toResponseRecord(ObjectUtil.clone(selectedRecord));						ActionsDataParser.reassignVoiceIncrement = false;			lsGameData.voiceInc = ActionsDataParser.voiceIncrement;						$copy.id += "Copy";			fileNewRecord($copy);		}				public override function removeRecord():void		{			if (numRecords > 1) {				super.removeRecord();			}			else {				lsServices.alert("You may not delete the only response definition. A minimum of one response is required.");			}		}	}}