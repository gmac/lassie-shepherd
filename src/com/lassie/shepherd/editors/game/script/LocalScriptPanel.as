package com.lassie.shepherd.editors.game.script{	import com.lassie.shepherd.editors.game.ui.PanelDisplays;	import com.lassie.shepherd.data.game.ScriptRecord;	import flash.events.Event;		public final class LocalScriptPanel extends ScriptPanel	{		public function LocalScriptPanel():void		{			super(ScriptRecordSet.LOCAL, PanelDisplays.LOCAL_SCRIPT);		}		protected override function populateRecord():void		{			super.populateRecord();			var record:ScriptRecord = selectedScript;			var $enter:Boolean = (lsRoomData.enterRoom == record.id);			var $exit:Boolean = (lsRoomData.exitRoom == record.id);			checkEnter.selected = $enter;			checkEnter.enabled = !$enter;			checkExit.selected = $exit;			checkExit.enabled = !$exit;		}				protected override function onSelectEnter(evt:Event):void		{			lsRoomData.enterRoom = checkEnter.selected ? selectedScript.id : "";			checkEnter.enabled = false;			_controller.populate();		}				protected override function onSelectExit(evt:Event):void		{			lsRoomData.exitRoom = checkEnter.selected ? selectedScript.id : "";			checkExit.enabled = false;			_controller.populate();		}	}}