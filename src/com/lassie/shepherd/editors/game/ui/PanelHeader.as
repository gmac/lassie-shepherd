package com.lassie.shepherd.editors.game.ui{	import com.lassie.shepherd.core.LSSprite;	import flash.display.MovieClip;	import flash.text.TextField;		public final class PanelHeader extends LSSprite	{		public var headerText:TextField;		public var iconDisplay:MovieClip;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function PanelHeader(t:String="", i:String=""):void		{			super();			iconDisplay.stop();			title = t;			icon = i;		}			// --------------------------------------------------	//  Public properties	// --------------------------------------------------				public function get title():String		{			return headerText.text;		}				public function set title(val:String):void		{			headerText.text = val.toUpperCase();		}				public function get icon():String		{			return iconDisplay.currentLabel;		}				public function set icon(val:String):void		{			iconDisplay.gotoAndStop(val);		}	}}