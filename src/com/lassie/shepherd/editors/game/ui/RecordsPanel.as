package com.lassie.shepherd.editors.game.ui{	import com.lassie.shepherd.editors.game.GameRecordSet;	import com.lassie.shepherd.events.UIEvent;	import flash.events.Event;		public class RecordsPanel extends Panel	{		// public		public var dataProvider:GameRecordSet;				// protected		protected var _controller:RecordsController;				// private		private var _records:Array = new Array();			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function RecordsPanel(dat:GameRecordSet, title:String="", icon:String=""):void		{			super(title, icon);			dataProvider = dat;			dataProvider.addEventListener(Event.CHANGE, this.onRecordSelect);			dataProvider.addEventListener(UIEvent.REFRESH, this.onRecordSelect);						_controller = new RecordsController(dataProvider);			_controller.populate();			addChild(_controller);		}				protected override function init():void		{			_controller.populate();		}			// --------------------------------------------------	//  Public properties	// --------------------------------------------------				public function get records():Array		{			return _records;		}				public function set records(val:Array):void		{			_records = val;		}				public override function populate():void		{			enabled = (dataProvider.numRecords > 0);			if (enabled) populateRecord();		}				protected function populateRecord():void		{			// override in subclass		}			// --------------------------------------------------	//  Private methods	// --------------------------------------------------				private function onRecordSelect(evt:Event):void		{			populate();		}	}}