package com.lassie.shepherd.editors.game.ui{	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.MovieClip;	import com.lassie.shepherd.core.LSClip;		public final class NavButton extends LSClip	{		public var iconDisplay:MovieClip;				private var _selected:Boolean = false;		private var _value:String = "";			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function NavButton(id:String):void		{			super();			stop();			_value = id;						iconDisplay.stop();			iconDisplay.gotoAndStop(id);						buttonMode = true;			useHandCursor = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, this.onRollOn);			addEventListener(MouseEvent.MOUSE_OUT, this.onRollOff);		}			// --------------------------------------------------	//  Public Properties	// --------------------------------------------------				public function get selected():Boolean		{			return _selected;		}				public function set selected(val:Boolean):void		{			_selected = val;			gotoAndStop(_selected ? 3 : 1);		}				override public function get enabled():Boolean		{			return mouseEnabled;		}				override public function set enabled(val:Boolean):void		{			mouseEnabled = val;			alpha = val ? 1 : 0.25;		}				public function get value():String		{			return _value;		}			// --------------------------------------------------	//  Event handlers	// --------------------------------------------------				private function onRollOn(evt:Event):void		{			if (!selected)			{				gotoAndStop(2);			}		}				private function onRollOff(evt:Event):void		{			if (!selected)			{				gotoAndStop(1);			}		}	}}