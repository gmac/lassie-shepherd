package com.lassie.shepherd.editors.game.collection{	import com.lassie.shepherd.editors.game.GameRecordSet;	import com.lassie.shepherd.data.game.GameDataParser;	import com.lassie.shepherd.data.game.CollectionRecord;	import com.lassie.utils.ObjectUtil;	import flash.events.Event;		public final class CollectionRecordSet extends GameRecordSet	{		public function CollectionRecordSet():void		{			super();		}		public override function addRecord():void		{			fileNewRecord(new CollectionRecord("Collection" + numRecords));		}				public override function copyRecord():void		{			var copy:CollectionRecord = GameDataParser.toCollectionRecord(ObjectUtil.clone(selectedRecord));			copy.id += "Copy";			fileNewRecord(copy);		}				public override function removeRecord():void		{			if (numRecords > 1) {				super.removeRecord();			}			else {				lsServices.alert("You may not delete the only collection definition. A minimum of one collection is required.");			}		}	}}