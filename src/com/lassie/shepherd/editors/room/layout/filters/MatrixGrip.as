package com.lassie.shepherd.editors.room.layout.filters{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;		internal final class MatrixGrip extends Sprite	{		public var id:String;		public var index:int;				private var _label:TextField;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function MatrixGrip(plotterId:String, n:int=0):void		{			super();			id = plotterId;			index = n;						mouseChildren = false;						_label = new TextField();			_label.defaultTextFormat = new TextFormat("_sans", 9, 0x000000, true);			_label.width = 10;			_label.selectable = false;			_label.multiline = true;			_label.autoSize = TextFieldAutoSize.CENTER;			_label.text = plotterId;			_label.x = -5;			_label.y = -Math.round(_label.height / 2);			addChild(_label);						graphics.lineStyle(2, 0x333333, 0.75);			graphics.beginFill(0xFFFFFF, 1);			graphics.drawCircle(0, 0, 6);			graphics.endFill();		}				public override function set x(val:Number):void		{			super.x = int(val);		}				public override function set y(val:Number):void		{			super.y = int(val);		}	}}