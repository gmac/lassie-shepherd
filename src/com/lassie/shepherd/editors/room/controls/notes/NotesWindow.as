package com.lassie.shepherd.editors.room.controls.notes{	import flash.events.Event;	import fl.controls.TextArea;	import flash.display.Sprite;	import com.lassie.shepherd.ui.Window;	import com.lassie.shepherd.editors.room.controls.ui.RoomEditorWindow;	public final class NotesWindow extends RoomEditorWindow	{	// --------------------------------------------------	//  Vars	// --------------------------------------------------			private var _notes:TextArea;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function NotesWindow():void		{			super();						_notes = new TextArea();			_notes.focusRect = false;			_notes.addEventListener(Event.CHANGE, this._captureNotes);			_notes.x = 0;			_notes.y = Window.HEADER_HEIGHT;			addChild(_notes);						closable = true;			dragable = true;			resizable = true;			title = "Notes";						setToMinSize(300, 200);		}				protected override function init():void		{			_notes.text = unescape(lsRoomData.notes);			super.init();		}			// --------------------------------------------------	//  Methods	// --------------------------------------------------				protected override function resizeContent(w:int, h:int):void		{			_notes.width = w;			_notes.height = h-_notes.y;			_notes.drawFocus(false);			super.resizeContent(w, _notes.height);		}				public override function close():void		{			parent.removeChild(this);		}			// --------------------------------------------------	//  Event handlers	// --------------------------------------------------				private function _captureNotes(evt:Event):void		{			lsRoomData.notes = escape(_notes.text);		}	}}