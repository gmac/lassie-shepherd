package com.lassie.shepherd.editors.room.controls.ui{	import com.lassie.shepherd.ui.Window;	import com.lassie.shepherd.ui.IToggle;	import flash.display.Sprite;	import flash.events.MouseEvent;		public class RoomEditorWindow extends Window	{		private var _scope:Sprite;		private var _toggle:IToggle;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function RoomEditorWindow():void		{			super();		}				public function configure(scope:Sprite, toggle:IToggle):void		{			_scope = scope;			_toggle = toggle;			_toggle.addEventListener(MouseEvent.CLICK, this._onToggleWindow);						var bttn:Sprite = Sprite(toggle);			x = bttn.x + 10;			y = bttn.y + bttn.height + 20;		}				protected override function init():void		{			if (_toggle != null) _toggle.selected = true;		}				protected override function uninit():void		{			if (_toggle != null) _toggle.selected = false;		}				private function _onToggleWindow(evt:MouseEvent):void		{			// if enabled and not already displayed			if (_toggle.selected && parent == null)			{				_scope.addChild(this);			}			// if disabled and is displayed			else if (!_toggle.selected && parent == _scope)			{				parent.removeChild(this);			}		}	}}