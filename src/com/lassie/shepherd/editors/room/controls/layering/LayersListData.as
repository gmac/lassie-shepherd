package com.lassie.shepherd.editors.room.controls.layering{	import com.lassie.shepherd.data.room.LayerTypes;		public final class LayersListData	{	// --------------------------------------------------	//  Static interface	// --------------------------------------------------			public static function getAbbrev(type:String):String		{			var t:String="";						switch(type)			{				case LayerTypes.HOTSPOT:										t = "pu";					break;								case LayerTypes.PLANE:										t = "pl";					break;									case LayerTypes.BACKGROUND:										t = "bg";					break;									case LayerTypes.CHARACTER:										t = "av";					break;			}						return "[" + t + "]";		}	// --------------------------------------------------	//  Instance public members	// --------------------------------------------------				public var id:String;		public var type:String;		public var abbrev:String;			// --------------------------------------------------	//  Constructor	// --------------------------------------------------				public function LayersListData(i:String, t:String):void		{			id = i;			type = t;			abbrev = LayersListData.getAbbrev(t);		}	}}