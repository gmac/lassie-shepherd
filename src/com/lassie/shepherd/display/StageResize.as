package com.lassie.shepherd.display{	import flash.display.Stage;	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.external.ExternalInterface;		public final class StageResize extends EventDispatcher	{		private var _stage:Stage;				public function StageResize(stage:Stage):void		{			super();						_stage = stage;			_stage.addEventListener(Event.RESIZE, this.handleResize);		}				private function getIsRunningLocally():Boolean		{			return (_stage.getChildAt(0).loaderInfo.url.indexOf("file:") == 0);		}				public function resize(w:int, h:int):void		{			if (!getIsRunningLocally() && ExternalInterface.available)			{				ExternalInterface.call("setAppSize", w, h);			}			else			{				dispatchEvent(new Event(Event.COMPLETE));			}		}				private function handleResize(evt:Event):void		{			dispatchEvent(new Event(Event.COMPLETE));		}	}	}