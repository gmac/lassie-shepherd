package com.lassie.shepherd.display{	// --------------------------------------------------	//  Checker tile for transparent background	// --------------------------------------------------			import flash.display.BitmapData;	import flash.geom.Rectangle;		public final class TransparencyTile extends BitmapData	{		public function TransparencyTile():void		{			super(16, 16, false, 0xFFFFFFFF);			fillRect(new Rectangle(0, 0, 8, 8), 0xebebeb);			fillRect(new Rectangle(8, 8, 8, 8), 0xebebeb);		}	}}