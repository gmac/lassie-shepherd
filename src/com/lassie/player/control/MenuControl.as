/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	final internal class MenuControl extends ProcessCommand	{		import com.lassie.utils.XmlUtil;		/**		* <menu display="show/hide/toggle"/>		*/		public function MenuControl():void		{			super();		}		override public function toString():String {			return "[MenuControl]";		}		override protected function _run():void		{			var $display:String = _sourceXML.@display;			switch ($display) {				case KeyValues.SHOW: uiGameMenu.show(); return;				case KeyValues.HIDE: uiGameMenu.hide(); return;				case KeyValues.TOGGLE: uiGameMenu.toggle(); return;			}			// undocumented feature:			// purge all cache SharedObjects.			if (_sourceXML.@resetSavedGames != undefined) {				if (XmlUtil.parseBoolean(_sourceXML.@resetSavedGames, false)) gameCache.reset();			}		}		override public function stop():void {			// no stop.		}		override public function resume():void {			// no resume.		}		override public function skip():void {			_run();		}	}}