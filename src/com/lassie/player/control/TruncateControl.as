/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	import com.lassie.utils.XmlUtil;	final internal class TruncateControl extends ProcessCommand	{		/**		* <truncate skipping="1" call="1">		*	<!-- do stuff -->		* </truncate>		*/		public function TruncateControl():void {			super();		}	//-------------------------------------------------	// Process methods	//-------------------------------------------------		override public function toString():String {			return "[TruncateControl]";		}	//-------------------------------------------------	// Control methods	//-------------------------------------------------		override protected function _run():void		{			// set process truncation.			if (_sourceXML.children().length() > 0) {				parentProcess.setEndScript(_sourceXML.children(), XmlUtil.parseBoolean(_sourceXML.@skipping, false));			}			// call process truncation.			if (XmlUtil.parseBoolean(_sourceXML.@call, false)) {				parentProcess.callEndScript();			}			_complete();		}		override public function skip():void {			_run();		}	}}