/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	/**	* ProcessCommand is the abstract for all game controllers.	* A ProcessCommand is build and then queued into a Process object.	* ProcessCommand implements the full game component API.	*/	internal class ProcessCommand extends Command	{		// protected		protected var _sourceXML:XML;		// private		private var _parentProcess:Process;		// constructor		public function ProcessCommand():void		{			super();		}		internal function init($script:XML, $parent:Process):void {			_parentProcess = $parent;			parse($script);		}		override internal function parse($xml:XML):void {			_sourceXML = $xml;		}		override public function destroy():void {			_parentProcess = null;			_sourceXML = null;		}	//-------------------------------------------------	// Public references	//-------------------------------------------------		public function get parentProcess():Process {			return _parentProcess;		}	}}