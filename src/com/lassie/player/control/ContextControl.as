/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	import com.lassie.player.ui.ContextFormat;	/**	* The ContextControl manages configuration of the game's contextual title display.	* INSTANT.	*/	final internal class ContextControl extends ProcessCommand	{		/**		* <context noun="" verb="" action="clear/flash" format="upper/lower" normalColor="#FFFFFF" highlightColor="#FF0000"/>		*/		public function ContextControl():void {			super();		}		override public function toString():String {			return "[ContextControl]";		}	//-------------------------------------------------	// Control methods	//-------------------------------------------------		override protected function _run():void		{			var $noun:String = _sourceXML.@noun;			var $verb:String = _sourceXML.@verb;			var $action:String = _sourceXML.@action;			// set the text formatting style.			if (_sourceXML.@format != undefined) {				uiContext.format = _sourceXML.@format;			}			// set the normal text color.			if (_sourceXML.@normalColor != undefined) {				uiContext.normalColor = _sourceXML.@normalColor;			}			// set the text highlight color.			if (_sourceXML.@highlightColor != undefined) {				uiContext.highlightColor = _sourceXML.@highlightColor;			}			// set noun & verb language.			if ($noun + $verb != "") {				if ($noun == "") $noun = uiContext.noun;				if ($verb == "") $verb = uiContext.verb;				uiContext.setSummary($noun, $verb);			}			// perform a contextual display action.			switch($action) {				case "clear": uiContext.clear(); break;				case "highlight": uiContext.execute(); break;			}			_complete();		}		override public function stop():void {			// none.		}		override public function resume():void {			// none.		}		override public function skip():void {			_run();		}	}}