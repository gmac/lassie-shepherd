/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	import flash.events.Event;	/**	* FlashControl provides an API for enabling and sending messages out into the Flash runtime.	* INSTANT.	*/	final internal class FlashControl extends ProcessCommand	{		/**		* <flash stageEvent="eventName"/>		*/		public function FlashControl():void		{			super();		}	//-------------------------------------------------	// Process methods	//-------------------------------------------------		override public function toString():String {			return "[FlashControl]";		}	//-------------------------------------------------	// Control methods	//-------------------------------------------------		override protected function _run():void		{			// enable stats output			if (_sourceXML.@stageEvent != undefined) {				stage.dispatchEvent(new Event( _sourceXML.@stageEvent ));			}			_complete();		}		override public function stop():void {			// none.		}		override public function resume():void {			// none.		}		override public function skip():void {			_run();		}	}}