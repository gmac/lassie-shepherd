/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.control{	import flash.net.navigateToURL;	import flash.net.URLRequest;	/**	* The WebLinkControl will fire off a network request to an outside URL.	*/	final internal class WebLinkControl extends ProcessCommand	{		/**		* <weblink url="http://www.lassiegames.com/stitch" target="_blank"/>		*/		public function WebLinkControl():void		{			super();		}	//-------------------------------------------------	// Process methods	//-------------------------------------------------		override public function toString():String {			return "[WebLinkControl]";		}	//-------------------------------------------------	// Control methods	//-------------------------------------------------		override protected function _run():void		{			if (_sourceXML.@url != undefined)			{				var $target:String = (_sourceXML.@target != undefined) ? _sourceXML.@target : '_blank';				navigateToURL(new URLRequest(_sourceXML.@url), $target);			}			_complete();		}		override public function skip():void {			_run();		}	}}