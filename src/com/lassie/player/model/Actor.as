/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.model{	final public class Actor extends DataModel	{		// private		private var _name:String="";		private var _asset:String="";		private var _regX:int=0;		private var _regY:int=0;		private var _responseId:String="";		private var _inventoryId:String="";		private var _subtitleColor:uint=0x000000;				public function Actor($id:String):void		{			super($id);		}	//-------------------------------------------------	// Overrides	//-------------------------------------------------			override internal function parse($xml:XML):void		{			_name = "";			_asset = $xml.@asset;			_regX = $xml.@regX;			_regY = $xml.@regY;			_responseId = $xml.@response;			_inventoryId = $xml.@inventory;			_subtitleColor = $xml.@subtitle;		}				override public function toString():String		{			return "[Actor] id: "+ id +", name: "+ name;		}			//-------------------------------------------------	// Read-only properties	//-------------------------------------------------			public function get name():String {			return _name;		}				public function get asset():String {			return _asset;		}				public function get regX():int {			return _regX;		}				public function get regY():int {			return _regY;		}				public function get subtitleColor():uint {			return _subtitleColor;		}				/**		* TODO: Need to cache these two values!		*/				// response		public function get response():String {			return _responseId;		}		public function set response($id:String):void {			_responseId = $id;			update();		}				// inventory		public function get inventory():String {			return _inventoryId;		}		public function set inventory($id:String):void {			_inventoryId = $id;			update();		}	}}