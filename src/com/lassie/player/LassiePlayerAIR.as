/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player{	import com.lassie.player.fileio.FileIO;	import com.lassie.player.fileio.AIRFileIOFactory;	import com.lassie.player.system.GameSystem;	import com.lassie.player.system.QuitAIR;	import flash.display.StageDisplayState;	import flash.display.Screen;	final public class LassiePlayerAIR extends LassiePlayer	{		/**		* Creates the LassiePlayer application.		*/		public function LassiePlayerAIR():void {			super();			FileIO.setFactory( new AIRFileIOFactory() );			GameSystem.setQuit( new QuitAIR() );			GameSystem.setFullScreenDisplayState( StageDisplayState.FULL_SCREEN_INTERACTIVE );		}		/**		* @private		* Called when the application is ready.		* This command configures the game window display.		* This feature is ONLY used by AIR.		*/		override protected function _initWindow():void		{			// scale the application window.			var $chromeW:int = stage.nativeWindow.width - stage.stageWidth;			var $chromeH:int = stage.nativeWindow.height - stage.stageHeight;			stage.nativeWindow.width += $chromeW;			stage.nativeWindow.height += $chromeH;			// position the application window.			stage.nativeWindow.x = (Screen.mainScreen.visibleBounds.width / 2) - (stage.nativeWindow.width / 2);			stage.nativeWindow.y = (Screen.mainScreen.visibleBounds.height / 2) - (stage.nativeWindow.height / 2);			// reveal the application window.			stage.nativeWindow.visible = true;		}	}}