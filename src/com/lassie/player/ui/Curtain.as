/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.ui{	import com.lassie.player.core.ICurtain;	import com.lassie.player.system.SystemParams;		final public class Curtain extends UILayer implements ICurtain	{		/** @private display configuration values. */		private var _fillColor:uint = 0x000000;				public function Curtain():void		{			super();			mouseChildren = true;			tweenType = UITweenType.ALPHA;			_fillColor = SystemParams.curtainColor;			show(false);		}				override protected function _finit():void {			_redraw();			display.cacheAsBitmap = true;		}				/**		* Redraws the curtain layer display with the current fill color.		*/		private function _redraw():void {			display.graphics.clear();			display.graphics.beginFill(_fillColor, 1);			display.graphics.drawRect(0, 0, gameDisplay.displayWidth, gameDisplay.displayHeight);			display.graphics.endFill();		}				/**		* Specifies the current color of the curtain layer's display.		*/		public function get fillColor():uint {			return _fillColor;		}		public function set fillColor($color:uint):void {			_fillColor = $color;			_redraw();		}	}}