/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.core{	import flash.events.IEventDispatcher;	/**	* IContext defines methods of the game's contextual summary text display.	*/	public interface IContext extends IEventDispatcher	{		function get format():String;		function set format($format:String):void;		function get normalColor():uint;		function set normalColor($color:uint):void;		function get highlightColor():uint;		function set highlightColor($color:uint):void;		function get staticVerb():String;		function set staticVerb($verb:String):void;		function get verb():String;		function get noun():String;		function setSummary($noun:String, $verb:String="", $item:String=""):void;		function refresh():void;		function execute():void;		function clear():void;	}}