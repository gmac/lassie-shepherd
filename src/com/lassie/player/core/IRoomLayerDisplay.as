/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.core{	import com.lassie.player.model.RoomLayer;	import flash.events.IEventDispatcher;	import flash.display.DisplayObject;	import flash.display.MovieClip;	import flash.geom.Rectangle;	import flash.geom.Point;	/**	* IRoomLayerDisplay defines methods available on a genaric room layer.	*/	public interface IRoomLayerDisplay extends IEventDispatcher	{		function get model():RoomLayer;		function get image():MovieClip;		// layer position		function get position():Point;		function set position($pt:Point):void;		// layering override		function get floatBehind():String;		function set floatBehind($id:String):void;		// frame offset		function get frameOffset():int;		function set frameOffset($offset:int):void;		// turn-view inversion		function get invertTurn():Boolean;		function set invertTurn($invert:Boolean):void;		// visibility		function get visible():Boolean;		function set visible($vis:Boolean):void;		// methods		function getRect($scope:DisplayObject):Rectangle;		function setImageFrame($frameLabel:String, $turnView:int=-1):void;		function cacheDisplay():void;	}}