/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.core{	final public class ActionProperties	{		static public const TYPE_PUPPET:String = "puppet";		static public const TYPE_ITEM:String = "item";				/**		* Creates an object with information about an action-selectable object.		* This object will be sent to the action selector display upon each call.		* Fixed values:		* - type		* - target		*/		static public function create($type:String, $targetId:String, $data:XML=null):Object		{			var $params:Object = new Object();			$params.type = $type;			$params.target = $targetId;						if (!!$data)			{				var $vars:XMLList = $data.@*;								for (var $j:int = 0; $j < $vars.length(); $j++) {					$params[ String($vars[$j].name()) ] = $vars[$j];				}			}						//if ($xml == null) $xml = new XML("<target/>");			//$xml.@type = $type;			//$xml.@id = $id;			return $params;		}				/**		* Gets a blank params object.		*/		static public function blank():Object {			return {type:"", target:""};		}	}}