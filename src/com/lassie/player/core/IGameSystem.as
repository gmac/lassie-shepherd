/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.core{	import flash.events.IEventDispatcher;		/**	* IGameSystem defines methods of the LassiePlayer's local system integration.	*/	public interface IGameSystem extends IEventDispatcher	{		function get localHost():Boolean;		function get lassieVersion():String;		function get quitEnabled():Boolean;		function get staticWindow():Boolean;		function get fullScreenEnabled():Boolean;		function get showAllEnabled():Boolean;		function get fullScreenDisplayState():String;		function get skipKeyCode():uint;		function get diaSkipKeyCode():uint;		function get diaMouseSkip():Boolean;		function get legalText():String;		function hasParam($param:String):Boolean;		function getParam($param:String, $defaultValue:String=""):String;		function quit():void;	}}