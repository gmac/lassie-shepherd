/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.core{	import flash.events.IEventDispatcher;	import flash.display.DisplayObject;	import flash.display.Stage;	import com.lassie.player.model.GameModel;	import com.lassie.player.display.GameDisplay;		/**	* ILPFramework defines accessors to core LassiePlayer components.	*/	public interface ILPFramework extends IEventDispatcher	{		/**		* Environment information.		*/		function get stage():Stage;		function get root():DisplayObject;		/**		* Model-View-Controller references.		*/		function get gameSystem():IGameSystem;		function get gameCache():IGameCache;		function get gameModel():GameModel;		function get gameController():IGameController;		function get gameDisplay():GameDisplay;		function get gameSound():IGameSound;		function get gameDebug():IGameDebugger;				/**		* Room references.		*/		function get gameRoom():IRoomDisplay;		function getRoomLayer($id:String):IRoomLayerDisplay;		function getRoomPuppet($id:String):IPuppetDisplay;				/**		* User interface references.		*/		function get uiActionSelector():IActionSelector;		function get uiContext():IContext;		function get uiCursor():ICursor;		function get uiCurtain():ICurtain;		function get uiGameMenu():IGameMenu;		function get uiInventory():IInventory;		function get uiLayouts():ILayoutManager;		function get uiKeyboard():IKeyboardInput;		function get uiSubtitle():ISubtitle;		function get uiTreeMenu():ITreeMenu;		function get uiSkip():ISkipButton;	}}