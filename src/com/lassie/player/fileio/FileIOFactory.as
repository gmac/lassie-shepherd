/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.fileio{	/**	* FileIOFactory constructs FileIO objects based for a specific file service type.	*/	public class FileIOFactory	{		protected var _method:String = FileIOMethod.SHARED_OBJECT;				public function FileIOFactory($method:String=null):void {			if (!!$method) method = $method;		}				/**		* Specifies the factory's method type.		*/		public function get method():String {			return _method;		}		public function set method($val:String):void		{			switch($val) {				// validate method type.				// only allow valid methods types to be set.				case FileIOMethod.SHARED_OBJECT:				case FileIOMethod.SERVER:					_method = $val;					break;			}		}				/**		* Creates and returns a FileIO object based on the requested method type.		*/		public function getFileIO($uri:String):FileIO		{			switch(_method)			{				case FileIOMethod.SHARED_OBJECT:					return new SharedObjectFile($uri);									case FileIOMethod.SERVER:					return new ServerFile($uri);			}			return null;		}	}}