/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.tween{	import com.caurina.transitions.Tweener;	final public class TweenerPlayer extends TweenPlayer	{		private var _target:Object;		private var _params:Object;		private var _playing:Boolean = true;		public function TweenerPlayer($target:Object, $params:Object):void {			super();			if ($params.autoDestroy) {				$params.onComplete = this.destroy;			}			_target = $target;			_params = $params;			Tweener.addTween($target, $params);		}		/**		* Destroys the tween player to optimize for garbage collection.		*/		override public function destroy():void {			Tweener.removeTweens( _target );			_target = null;			_params = null;		}		/**		* Specifies if the tween is currently playing.		*/		override public function get playing():Boolean {			return _playing;		}		/**		* Pauses the tween.		*/		override public function pause():void {			Tweener.pauseTweens( _target );			_playing = false;		}		/**		* Resumes a paused tween.		*/		override public function resume():void {			Tweener.resumeTweens( _target );			_playing = true;		}		/**		* Skips directly to the end of the tween.		*/		override public function skip():void		{			Tweener.removeTweens( _target );			_playing = false;			for (var $param:String in _params) {				// copy all parameters over to the target object.				if (_target.hasOwnProperty( $param )) _target[$param] = _params[$param];			}			// Set autoAlpha			if (_params.hasOwnProperty("autoAlpha") && _target.hasOwnProperty("visible")) {				_target["alpha"] = _params.autoAlpha;				_target["visible"] = (_params.autoAlpha > 0);			}			// Set call onComplete method			if (_params.hasOwnProperty("onComplete")) {				var $params:Array = (_params.hasOwnProperty("onCompleteParams")) ? _params.onCompleteParams : [];				_params.onComplete.apply(_target, $params);			}		}	}}