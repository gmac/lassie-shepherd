/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.tween{	import com.gs.TweenLite;	import com.gs.TweenGroup;		final public class TweenLitePlayer extends TweenPlayer	{		private var _tween:TweenLite;		private var _group:TweenGroup;				public function TweenLitePlayer($target:Object, $seconds:Number, $params:Object):void {			super();						if ($params.autoDestroy) {				$params.onComplete = this.destroy;			}						_tween = new TweenLite($target, $seconds, $params);			_group = new TweenGroup();			_group.push( _tween );		}				/**		* Destroys the tween.		*/		override public function destroy():void {			_group.clear(true);			_group = null;			_tween = null;		}				/**		* Specifies if the tween is currently playing.		*/		override public function get playing():Boolean {			return !_group.paused;		}				/**		* Pauses the tween.		*/		override public function pause():void {			_group.pause();		}		/**		* Resumes a paused tween.		*/		override public function resume():void {			_group.resume();		}				/**		* Skips directly to the end of the tween.		*/		override public function skip():void {			_tween.complete();		}	}}