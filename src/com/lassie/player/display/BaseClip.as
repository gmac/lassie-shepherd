/*** Lassie Engine Game Player* @author Greg MacWilliam.*/package com.lassie.player.display{	import flash.display.MovieClip;	import flash.events.Event;		public class BaseClip extends MovieClip	{		private var __init:Boolean = false;				public function BaseClip():void		{			super();			addEventListener(Event.ADDED_TO_STAGE, this._onAddedToStage, false, 0, true);			addEventListener(Event.REMOVED_FROM_STAGE, this._onRemovedFromStage, false, 0, true);		}				/**		* Sprite destroyer. Always call before purging a Sprite asset!		*/		public function destroy():void		{			removeEventListener(Event.ADDED_TO_STAGE, this._onAddedToStage);			removeEventListener(Event.REMOVED_FROM_STAGE, this._onRemovedFromStage);		}			//-------------------------------------------------	// Initializer methods	//-------------------------------------------------				/**		* First initialize: called the first time the sprite is added to stage.		*/		protected function _finit():void		{			// override in sub-class		}				/**		* Initialize: called each time the sprite is added to stage.		*/		protected function _init():void		{			// override in sub-class		}				/**		* Un-initialize: called each time the sprite is removed from stage.		*/		protected function _uninit():void		{			// override in sub-class		}			//-------------------------------------------------	// Event handlers	//-------------------------------------------------				private function _onAddedToStage(evt:Event):void		{			if (!__init) {				__init = true;				_finit();			}			_init();		}				private function _onRemovedFromStage(evt:Event):void		{			_uninit();		}	}}