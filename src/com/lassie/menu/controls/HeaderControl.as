/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.controls{	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		/**	* Lassie Player Game Menu.	*/	public class HeaderControl extends Sprite	{		// stage instances.		public var uiHeaderText:TextField;				public function HeaderControl():void		{			super();						this.mouseEnabled = false;			this.mouseChildren = false;			uiHeaderText.autoSize = TextFieldAutoSize.LEFT;		}				/**		* Specifies the button label text.		*/		public function get label():String {			return uiHeaderText.text;		}		public function set label($label:String):void {			uiHeaderText.text = $label.toUpperCase();		}	}}