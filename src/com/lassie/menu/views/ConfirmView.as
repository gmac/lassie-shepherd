/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.views{	import com.lassie.menu.controls.ButtonControl;	import com.lassie.menu.actions.MenuAction;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.events.MouseEvent;	import flash.events.Event;		/**	* Lassie Player game menu; confirm panel controller.	*/	final public class ConfirmView extends PanelView	{		// stage instances		public var uiConfirmMessage:TextField;		public var uiConfirmOkay:ButtonControl;		public var uiConfirmCancel:ButtonControl;				public function ConfirmView():void{			super();		}				/**		* Configures event listeners on all UI controls.		*/		override protected function _enableControls($enable:Boolean):void		{			if (!!lassiePlayer) {				if ($enable) {					uiConfirmOkay.addEventListener(MouseEvent.CLICK, this._onOkay, false, 0, true);					uiConfirmCancel.addEventListener(MouseEvent.CLICK, this._onCancel, false, 0, true);				}				else {					uiConfirmOkay.removeEventListener(MouseEvent.CLICK, this._onOkay);					uiConfirmCancel.removeEventListener(MouseEvent.CLICK, this._onCancel);				}			}		}				/**		* Populates all control label texts.		*/		override protected function _setLabels():void		{			uiConfirmOkay.label = menuFormat.confirmButton;			uiConfirmCancel.label = menuFormat.cancelButton;		}				/**		* Populates the view with all current Lassie Player settings.		*/		override protected function _populate():void		{			if (!!lassiePlayer) {				uiConfirmMessage.autoSize = TextFieldAutoSize.CENTER;				uiConfirmMessage.text = _action.confirmMessage;			}		}			//--------------------------------------------------	// Button Handlers	//--------------------------------------------------			/** @private called upon click of the "okay" button. */		private function _onOkay($event:Event):void {			_action.call();		}				/** @private called upon click of the "cancel" button. */		private function _onCancel($event:Event):void {			_action.cancel();		}	}}