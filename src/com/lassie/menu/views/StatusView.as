/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.views{	import com.lassie.menu.actions.MenuAction;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;		/**	* Lassie Player game menu; status panel controller.	*/	public class StatusView extends PanelView	{		// stage instances		public var uiStatusMessage:TextField;		public function StatusView():void {			super();		}				/**		* Populates the view with all current Lassie Player settings.		*/		override protected function _populate():void		{			if (!!lassiePlayer) {				uiStatusMessage.autoSize = TextFieldAutoSize.CENTER;				uiStatusMessage.text = _action.statusMessage;			}		}	}}