/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.actions{	import com.lassie.menu.views.MenuView;	import com.lassie.events.LassieMenuEvent;	import flash.events.Event;		/**	* Lassie Player Game Menu.	*/	final public class LoadGameAction extends MenuAction	{		private var _index:uint = 0;				public function LoadGameAction($index:uint):void {			super();			_index = $index;		}				override public function get confirmMessage():String {			return menuFormat.loadGameConfirm;		}				override public function get statusMessage():String {			return menuFormat.loadGameStatus;		}				override public function call():void {			gameMenu.setView( MenuView.STATUS, this );			lassiePlayer.addEventListener(LassieMenuEvent.LOAD_COMPLETE, this._onLoadComplete, false, 0, true);			lassiePlayer.loadGame( _index );		}				override public function cancel():void {			gameMenu.setView( MenuView.MAIN );		}				/** @private called upon completion of game data being loaded. */		private function _onLoadComplete($event:Event):void {			lassiePlayer.removeEventListener(LassieMenuEvent.LOAD_COMPLETE, this._onLoadComplete);			gameMenu.close();		}	}}