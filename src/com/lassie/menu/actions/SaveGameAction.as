/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.actions{	import com.lassie.menu.views.MenuView;	import com.lassie.events.LassieMenuEvent;	import flash.events.Event;		/**	* Lassie Player Game Menu.	*/	final public class SaveGameAction extends MenuAction	{		private var _index:uint = 0;		private var _name:String = ""				public function SaveGameAction($index:uint, $name:String):void {			super();			_index = $index;			_name = $name;		}				override public function get confirmMessage():String {			return menuFormat.saveGameConfirm;		}				override public function get statusMessage():String {			return menuFormat.saveGameStatus;		}				override public function call():void {			gameMenu.setView( MenuView.STATUS, this );			lassiePlayer.addEventListener(LassieMenuEvent.SAVE_COMPLETE, this._onSaveComplete, false, 0, true);			lassiePlayer.saveGame( _index, _name );		}				override public function cancel():void {			gameMenu.setView( MenuView.MAIN );		}				/** @private called upon completion of game data being saved. */		private function _onSaveComplete($event:Event):void {			lassiePlayer.removeEventListener(LassieMenuEvent.SAVE_COMPLETE, this._onSaveComplete);			gameMenu.setView( MenuView.MAIN );		}	}}