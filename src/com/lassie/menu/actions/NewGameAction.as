/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.actions{	import com.lassie.menu.views.MenuView;	import com.lassie.events.LassieMenuEvent;	import flash.events.Event;		/**	* Lassie Player Game Menu.	*/	final public class NewGameAction extends MenuAction	{		public function NewGameAction():void {			super();		}				override public function get confirmMessage():String {			return menuFormat.newGameConfirm;		}				override public function get statusMessage():String {			return menuFormat.newGameStatus;		}				override public function call():void {			gameMenu.setView( MenuView.STATUS, this );			lassiePlayer.addEventListener(LassieMenuEvent.LOAD_COMPLETE, this._onLoadComplete, false, 0, true);			lassiePlayer.newGame();		}				override public function cancel():void {			gameMenu.setView( MenuView.MAIN );		}				/** @private called upon a new game starting. */		private function _onLoadComplete($event:Event):void {			lassiePlayer.removeEventListener(LassieMenuEvent.LOAD_COMPLETE, this._onLoadComplete);			gameMenu.close();		}	}}