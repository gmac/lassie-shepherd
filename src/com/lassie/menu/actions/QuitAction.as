/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.actions{	import com.lassie.menu.views.MenuView;		/**	* Lassie Player Game Menu.	*/	final public class QuitAction extends MenuAction	{		public function QuitAction():void {			super();		}				override public function get confirmMessage():String {			return menuFormat.quitConfirm;		}				override public function get statusMessage():String {			return menuFormat.quitStatus;		}				override public function call():void {			//gameMenu.setView( MenuView.STATUS );			lassiePlayer.quit();		}				override public function cancel():void {			gameMenu.setView( MenuView.MAIN );		}	}}