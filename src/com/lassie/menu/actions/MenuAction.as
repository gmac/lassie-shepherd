/*** Lassie Engine* @author Greg MacWilliam.*/package com.lassie.menu.actions{	import com.lassie.external.ILassiePlayer;	import com.lassie.menu.LPGameMenu;	import com.lassie.menu.views.MenuView;	import com.lassie.menu.format.MenuFormat;		/**	* MenuAction is an abstract class for all menu actions to build frem.	*/	public class MenuAction	{		public function MenuAction():void {			super();		}				/**		* Provides a reference to the main game menu.		*/		public function get gameMenu():LPGameMenu {			return LPGameMenu.instance;		}				/**		* Provides a reference to the menu's formatting object.		*/		public function get menuFormat():MenuFormat {			return LPGameMenu.instance.menuFormat;		}				/**		* Provides a reference to the Lassie Player API.		*/		public function get lassiePlayer():ILassiePlayer {			return LPGameMenu.instance.lassiePlayer;		}				public function get confirmMessage():String {			return "Confirm?";		}				public function get statusMessage():String {			return "Please wait...";		}				public function confirm():void {			gameMenu.setView( MenuView.CONFIRM, this );		}				public function call():void {			// override in subclass.		}				public function cancel():void {			// override in subclass.		}	}}