package com.lassie.menu.ui{	import flash.display.Sprite;	import flash.display.Shape;	import flash.events.MouseEvent;		internal class ScrollArrow extends UIComponent	{		private var _hovering:Boolean = false;		private var _pointer:Shape;				public function ScrollArrow($style:UIStyle):void		{			super();			buttonMode = true;			useHandCursor = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, this._onMouseOver, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, this._onMouseOut, false, 0, true);						_pointer = new Shape();			addChild(_pointer);						style = $style;		}				/**		* Destroys the scroll bar to optimize for garbage collection.		*/		override public function destroy():void		{			super.destroy();			removeEventListener(MouseEvent.MOUSE_OVER, this._onMouseOver);			removeEventListener(MouseEvent.MOUSE_OUT, this._onMouseOut);			removeChild(_pointer);			_pointer = null;		}				/** @private redraws the component graphics. */		override protected function _redraw():void		{			// draw bg			var $w:int = style.scrollWidth - (style.scrollBorderSize * 2);			var $bg:uint = _hovering ? style.arrowBgColorOn : style.arrowBgColorOff;			graphics.clear();			graphics.beginFill($bg, 1);			graphics.drawRect(0, 0, $w, style.arrowHeight);			graphics.endFill();						// draw pointer			var $pc:uint = _hovering ? style.arrowPointerColorOn : style.arrowPointerColorOff;			var $ph:int = style.arrowHeight - (style.arrowPadTop + style.arrowPadBottom);			var $pr:int = $w/2 - style.arrowPadX;			_pointer.x = $w/2;			_pointer.y = style.arrowPadTop-0.5;			_pointer.graphics.clear();			_pointer.graphics.beginFill($pc, 1);			_pointer.graphics.moveTo(0, 0);			_pointer.graphics.lineTo($pr, $ph);			_pointer.graphics.lineTo(-$pr, $ph);			_pointer.graphics.lineTo(0, 0);			_pointer.graphics.endFill();		}			// --------------------------------------------------	//  Event handlers	// --------------------------------------------------			/** @private called upon mouseOver of the scroll arrow. */		private function _onMouseOver($event:MouseEvent):void {			_hovering = true;			_redraw();		}				/** @private called upon mouseOut of the scroll arrow. */		private function _onMouseOut($event:MouseEvent):void {			_hovering = false;			_redraw();		}	}}