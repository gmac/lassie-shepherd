package com.lassie.utils{	final public class ColorUtil	{		static public function toHex($hex:uint):String		{			var $r:Number = ($hex >> 16);			var $g:Number = ($hex >> 8 ^ r << 8);			var $b:Number = ($hex ^ (r << 16 | g << 8));						var $red:String = $r.toString(16);			var $green:String = $g.toString(16);			var $blue:String = $b.toString(16);						$red = ($red.length < 2) ? "0" + $red : $red;			$green = ($green.length < 2) ? "0" + $green : $green;			$blue = ($blue.length < 2) ? "0" + $blue : $blue;						return "0x" + ($red + $green + $blue).toUpperCase();		}	}}